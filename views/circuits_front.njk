{% extends "layoutNav.njk" %}

{% block head %}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Formula1 Dabatase</title>
    <link rel="stylesheet" href="/stylesheets/drivers.css">

{% endblock %}

{% block nav %}
    <li class="nav-item">
        <a class="nav-link" href="/">Drivers<span class="sr-only"></span></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/constructors_front">Constructors</a>
    </li>
    <li class="nav-item active">
        <a class="nav-link" href="#">Circuits</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/races_front">Races</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/qualifying_front">Qualifying</a>
    </li>

{% endblock %}

{% block content %}

    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Search Circuits</h2>
            </div>
            <form method="POST" action="/get_circuits_front" id="get-races">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="id-input" class="form-label">Id</label>
                        <input type="int" class="form-control" name="circuitId" id="id-input" /><br>
                        <input type="hidden" name="formInstance" value="get" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="action" value="Get Circuits" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Add Circuits</h2>
            </div>
            <form method="POST" action="/get_circuits_front" id="post-races">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="circuitRef-input" class="form-label">Circuit Ref</label>
                        <input type="string" class="form-control" name="circuitRef" id="circuitRef-input" /><br>
                        <label for="name-input" class="form-label">Name</label>
                        <input type="string" class="form-control" name="name" id="name-input" /><br>
                        <label for="location-input" class="form-label">Location</label>
                        <input type="string" class="form-control" name="location" id="location-input" /><br>
                        <label for="country-input" class="form-label">Country</label>
                        <input type="string" class="form-control" name="country" id="country-input" /><br>
                        <input type="hidden" name="formInstance" value="post" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="action" value="Add Circuits" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Update Circuits</h2>
            </div>
            <form method="POST" action="/get_circuits_front" id="post-race">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="circuitId-input" class="form-label">ID</label>
                        <input type="int" class="form-control" name="circuitId" id="circuitId-input" /><br>
                        <label for="circuitRef-input" class="form-label">Circuit Ref</label>
                        <input type="string" class="form-control" name="circuitRef" id="circuitRef-input" /><br>
                        <label for="name-input" class="form-label">Name</label>
                        <input type="string" class="form-control" name="name" id="name-input" /><br>
                        <label for="location-input" class="form-label">Location</label>
                        <input type="string" class="form-control" name="location" id="location-input" /><br>
                        <label for="country-input" class="form-label">Country</label>
                        <input type="string" class="form-control" name="country" id="country-input" /><br>
                        <input type="hidden" name="formInstance" value="put" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="action" value="Update Circuits" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}
