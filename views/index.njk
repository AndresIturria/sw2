{% block content %}

    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Search Drivers</h2>
            </div>
            <form method="GET" action="#" id="get-driver">
                <div class="modal-body">
                    <div class="mb-3">
                    <label for="forename-input" class="form-label">Forename</label>
                    <input type="text" class="form-control" name="forename" id="forename-input" "/> <br>
                    <label for="surname-input" class="form-label">Surname</label>
                    <input type="text" class="form-control" name="surname" id="surname-input" "/><br>
                    <label for="number-input" class="form-label">Number</label>
                    <input type="int" class="form-control" name="number" id="number-input"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="action" value="Get Driver" class="btn btn-primary"/>
                </div>
            </form>
            <div class="modal-footer">
                <h2>Meter aqui el resultado del get</h2>
            </div>
        </div>
    </div>

    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Add/Delete/Update Drivers</h2>
            </div>
            <form method="POST" action="#" id="post-driver">
                <div class="modal-body">
                    <div class="mb-3">
                    <label for="forename-input" class="form-label">Forename</label>
                    <input type="text" class="form-control" name="forename" id="forename-input" "/><br>
                    <label for="surname-input" class="form-label">Surname</label>
                    <input type="text" class="form-control" name="surname" id="surname-input" "/><br>
                    <label for="number-input" class="form-label">Number</label>
                    <input type="int" class="form-control" name="number" id="number-input"/> 
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="action" value="Add Driver" class="btn btn-primary"/> 
                    <input type="submit" name="action" value="Delete Driver" class="btn btn-primary"/> 
                    <input type="submit" name="action" value="Update Driver" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

