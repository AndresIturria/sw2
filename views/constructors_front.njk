{% extends "layoutNav.njk" %}

{% block head %}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Formula1 Dabatase</title>
    <link rel="stylesheet" href="/stylesheets/drivers.css">

{% endblock %}

{% block nav %}
    <li class="nav-item">
        <a class="nav-link" href="/">Drivers<span class="sr-only"></span></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Constructors</a>
    </li>
    <li class="nav-item active">
        <a class="nav-link" href="/circuits_front">Circuits</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="races_front">Races</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/qualifying_front">Qualifying</a>
    </li>

{% endblock %}

{% block content %}

    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Search Constructors</h2>
            </div>
            <form method="POST" action="/get_constructors_front" id="get-constructors">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="id-input" class="form-label">Id</label>
                        <input type="int" class="form-control" name="constructorId" id="id-input" /><br>
                        <input type="hidden" name="formInstance" value="get" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="action" value="Get Constructors" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Add Constructor</h2>
            </div>
            <form method="POST" action="get_constructors_front" id="post-constructors">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="constructorRef-input" class="form-label">Constructor Ref</label>
                        <input type="int" class="form-control" name="constructorRef" id="constructorRef-input" /><br>
                        <label for="name-input" class="form-label">Name</label>
                        <input type="string" class="form-control" name="name" id="name-input" /><br>
                        <label for="nationality-input" class="form-label">Nationality</label>
                        <input type="string" class="form-control" name="nationality" id="nationality-input" /><br>
                        <input type="hidden" name="formInstance" value="post" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="action" value="Add Constructor" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Update Constructor</h2>
            </div>
            <form method="POST" action="/get_constructors_front" id="post-constructor">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="constructorId-input" class="form-label">Constructor Id</label>
                        <input type="int" class="form-control" name="constructorId" id="constructorId-input" /><br>
                        <label for="constructorRef-input" class="form-label">Constructor Ref</label>
                        <input type="int" class="form-control" name="constructorRef" id="constructorRef-input" /><br>
                        <label for="name-input" class="form-label">Name</label>
                        <input type="string" class="form-control" name="name" id="name-input" /><br>
                        <label for="nationality-input" class="form-label">Nationality</label>
                        <input type="string" class="form-control" name="nationality" id="nationality-input" /><br>
                        <input type="hidden" name="formInstance" value="put" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="action" value="Update Constructor" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}
